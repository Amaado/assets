<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entities.EmpleadoDatosProf" table="empleado_datos_prof">
        <id name="dni" column="dni" type="string" length="9"></id>
        <property name="categoria" column="categoria" type="string" length="2" not-null="true"/>
        <property name="sueldoBrutoAnual" column="sueldo_bruto_anual" type="big_decimal" precision="8" scale="2" not-null="false"/>
    </class>
</hibernate-mapping>